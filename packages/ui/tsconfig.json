{
  "compilerOptions": {
    "target": "esnext",
    "jsx": "preserve",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "webworker"
    ],
    "useDefineForClassFields": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "@intake24/common/*": [
        "../common/src/*"
      ],
      "@intake24/ui/*": [
        "src/*"
      ],
      "@intake24/*": [
        "../*/src"
      ]
    },
    "resolveJsonModule": true,
    "types": [
      "jest",
      "jest-extended",
      "vite/client",
      "vite-plugin-pwa/client",
      "vuetify"
    ],
    "strict": true,
    "noImplicitThis": true,
    "importHelpers": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true
  },
  "vueCompilerOptions": {
    "target": 2.7
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ]
}
