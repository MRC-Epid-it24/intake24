{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "importHelpers": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "types": ["jest", "jest-extended", "vuetify", "webpack-env"],
    "paths": {
      "@intake24/ui/*": ["src/*"],
      "@intake24/common/*": ["../common/src/*"],
      "@intake24/*": ["../*/src"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost", "webworker"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "__tests__/**/*.ts",
    "__tests__/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
