{
  "name": "intake24",
  "version": "1.0.0",
  "description": "Dietary recall system",
  "keywords": [
    "Intake24",
    "Dietary recall system"
  ],
  "private": true,
  "author": "",
  "license": "Apache-2.0",
  "main": "index.js",
  "engines": {
    "node": "^14.17.0 || >=16.0.0"
  },
  "packageManager": "pnpm@6.32.22",
  "scripts": {
    "preinstall": "npx -y only-allow pnpm",
    "prepare": "pnpm simple-git-hooks",
    "clean": "rimraf **/coverage **/dist **/node_modules",
    "build": "pnpm --filter ./apps build",
    "db:migrate": "run-s db:foods:migrate db:system:migrate",
    "db:foods:migrate": "pnpm --filter @intake24/db db:foods:migrate",
    "db:foods:migrate:undo": "pnpm --filter @intake24/db db:foods:migrate:undo",
    "db:system:migrate": "pnpm --filter @intake24/db db:system:migrate",
    "db:system:migrate:undo": "pnpm --filter @intake24/db db:system:migrate:undo",
    "cli": "pnpm --filter @intake24/cli cli",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs",
    "docs:lint": "prettier --check docs/**/*.md",
    "docs:lint:fix": "prettier --write docs/**/*.md",
    "lint": "eslint --ext .ts,.vue apps/*/src/**/*.{ts,vue} apps/*/__tests__/**/*.{ts,vue} packages/*/src/**/*.{ts,vue} packages/*/__tests__/**/*.{ts,vue}",
    "lint:fix": "pnpm lint -- --fix",
    "test:unit": "jest",
    "test:unit:watch": "pnpm test:unit -- --watch",
    "test:unit:coverage": "pnpm test:unit -- --coverage",
    "test:integration": "pnpm --filter * test:integration",
    "test:integration:coverage": "pnpm --filter * test:integration:coverage"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.md": "prettier --write",
    "*.{ts,vue}": "eslint --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MRC-Epid-it24/intake24.git"
  },
  "bugs": {
    "url": "https://github.com/MRC-Epid-it24/intake24/issues"
  },
  "homepage": "https://docs.intake24.co.uk",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@jest/types": "^28.1.1",
    "@types/jest": "^28.1.2",
    "@types/node": "^17.0.45",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^11.0.0",
    "eslint": "^8.18.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-define-config": "^1.5.1",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^9.1.1",
    "jest": "^28.1.1",
    "jest-extended": "^2.0.0",
    "lint-staged": "^13.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.8.0",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.4",
    "vitepress": "^0.22.4"
  }
}
