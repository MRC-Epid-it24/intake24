{
  "name": "intake24",
  "version": "1.0.0",
  "description": "Intake24 dietary recall system",
  "private": true,
  "author": "",
  "license": "Apache-2.0",
  "main": "index.js",
  "engines": {
    "node": "^14.17.0 || >=16.0.0"
  },
  "packageManager": "pnpm@6.32.8",
  "scripts": {
    "preinstall": "npx -y only-allow pnpm",
    "prepare": "pnpm simple-git-hooks",
    "build": "pnpm build --filter ./apps",
    "db:migrate": "run-s db:foods:migrate db:system:migrate",
    "db:foods:migrate": "pnpm db:foods:migrate --filter ./packages/db",
    "db:foods:migrate:undo": "pnpm db:foods:migrate:undo --filter ./packages/db",
    "db:system:migrate": "pnpm db:system:migrate --filter ./packages/db",
    "db:system:migrate:undo": "pnpm db:system:migrate:undo --filter ./packages/db",
    "cli": "pnpm cli --filter ./apps/cli",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs",
    "docs:lint": "prettier --check docs/**/*.md",
    "docs:lint:fix": "prettier --write docs/**/*.md",
    "lint": "eslint --ext .ts apps/*/src/**/*.ts apps/*/__tests__/**/*.ts packages/*/src/**/*.ts packages/*/__tests__/**/*.ts",
    "lint:fix": "pnpm lint -- --fix",
    "test:unit": "jest",
    "test:unit:watch": "pnpm test:unit -- --watch",
    "test:unit:coverage": "pnpm test:unit -- --coverage",
    "test:integration": "pnpm test:integration --filter ./apps/api",
    "test:integration:coverage": "pnpm test:integration:coverage --filter ./apps/api"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.md": "prettier --write",
    "*.{ts,vue}": "eslint --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MRC-Epid-it24/intake24.git"
  },
  "keywords": [],
  "bugs": {
    "url": "https://github.com/MRC-Epid-it24/intake24/issues"
  },
  "homepage": "https://docs.intake24.co.uk",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.29",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "@vue/eslint-config-airbnb": "^6.0.0",
    "@vue/eslint-config-typescript": "^10.0.0",
    "eslint": "^8.14.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-define-config": "^1.4.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.7.1",
    "eslint-plugin-vuejs-accessibility": "^1.1.1",
    "jest": "^27.5.1",
    "jest-extended": "^2.0.0",
    "lint-staged": "^12.4.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.7.0",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3",
    "vitepress": "^0.22.3"
  }
}
