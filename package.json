{
  "name": "intake24",
  "version": "1.0.0",
  "description": "Intake24 dietary recall system",
  "private": true,
  "author": "",
  "license": "Apache-2.0",
  "main": "index.js",
  "engines": {
    "node": "^14.17.0 || >=16.0.0"
  },
  "packageManager": "pnpm@6.26.1",
  "scripts": {
    "preinstall": "npx -y only-allow pnpm",
    "build": "pnpm build --filter ./apps",
    "db:migrate": "run-s db:migrate:foods db:migrate:system",
    "db:migrate:foods": "pnpm db:migrate:foods --filter ./packages/db",
    "db:migrate:system": "pnpm db:migrate:system --filter ./packages/db",
    "cli": "pnpm cli --filter ./apps/cli",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs",
    "lint": "eslint --ext .ts apps/*/src/**/*.ts apps/*/__tests__/**/*.ts packages/*/src/**/*.ts packages/*/__tests__/**/*.ts",
    "lint:fix": "pnpm lint -- --fix",
    "test:unit": "jest",
    "test:unit:watch": "pnpm test:unit -- --watch",
    "test:integration": "pnpm test:integration --filter ./apps/api"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MRC-Epid-it24/intake24.git"
  },
  "keywords": [],
  "bugs": {
    "url": "https://github.com/MRC-Epid-it24/intake24/issues"
  },
  "homepage": "https://docs.intake24.co.uk",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "@vue/eslint-config-airbnb": "^6.0.0",
    "@vue/eslint-config-typescript": "^10.0.0",
    "eslint": "^8.7.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-define-config": "^1.2.2",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.3.0",
    "eslint-plugin-vuejs-accessibility": "^1.1.1",
    "jest": "^27.4.7",
    "jest-extended": "^1.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4",
    "vitepress": "^0.21.5"
  }
}
