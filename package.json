{
  "name": "intake24",
  "version": "1.0.0",
  "description": "Dietary recall system",
  "keywords": [
    "Intake24",
    "Dietary recall system"
  ],
  "private": true,
  "author": "",
  "license": "Apache-2.0",
  "main": "index.js",
  "engines": {
    "node": ">=14.20.0"
  },
  "packageManager": "pnpm@6.33.1",
  "scripts": {
    "preinstall": "npx -y only-allow pnpm",
    "prepare": "pnpm simple-git-hooks",
    "clean": "rimraf **/coverage **/dist **/node_modules",
    "build": "pnpm --filter ./apps build",
    "db:migrate": "run-s db:foods:migrate db:system:migrate",
    "db:foods:migrate": "pnpm --filter @intake24/db db:foods:migrate",
    "db:foods:migrate:undo": "pnpm --filter @intake24/db db:foods:migrate:undo",
    "db:system:migrate": "pnpm --filter @intake24/db db:system:migrate",
    "db:system:migrate:undo": "pnpm --filter @intake24/db db:system:migrate:undo",
    "cli": "pnpm --filter @intake24/cli cli",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs",
    "docs:lint": "prettier --write docs/**/*.md",
    "lint": "eslint . --ext .ts,.vue --fix --ignore-path .gitignore",
    "test:unit": "jest",
    "test:unit:watch": "pnpm test:unit -- --watch",
    "test:unit:coverage": "pnpm test:unit -- --coverage",
    "test:integration": "pnpm --filter * test:integration",
    "test:integration:coverage": "pnpm --filter * test:integration:coverage"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged",
    "commit-msg": "pnpm tsx scripts/verify-commit.ts $1"
  },
  "lint-staged": {
    "*.md": "prettier --write",
    "*.{ts,vue}": "eslint --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MRC-Epid-it24/intake24.git"
  },
  "bugs": {
    "url": "https://github.com/MRC-Epid-it24/intake24/issues"
  },
  "homepage": "https://docs.intake24.org",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@jest/types": "^28.1.3",
    "@types/jest": "^28.1.6",
    "@types/node": "^18.6.3",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^11.0.0",
    "eslint": "^8.21.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-define-config": "^1.6.0",
    "eslint-import-resolver-typescript": "^3.4.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.3.0",
    "jest": "^28.1.3",
    "jest-extended": "^3.0.1",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "picocolors": "^1.0.0",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.8.0",
    "ts-jest": "^28.0.7",
    "tsx": "^3.8.0",
    "typescript": "^4.7.4",
    "vitepress": "^1.0.0-alpha.4"
  }
}
