{
  "name": "@intake24/portal",
  "version": "0.1.0",
  "private": true,
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/MRC-Epid-it24/intake24.git",
    "directory": "apps/portal"
  },
  "scripts": {
    "build": "run-p build:back build:front build:sitemap",
    "build:back": "pnpm build:back:clean && webpack --env NODE_ENV=production",
    "build:back:clean": "rimraf dist",
    "build:front": "mix --production",
    "build:sitemap": "node scripts/sitemap.mjs",
    "dev": "run-p dev:back dev:front",
    "dev:back": "webpack --env NODE_ENV=development",
    "dev:front": "mix -- watch",
    "lint": "eslint --ext .js,.ts src/ __tests__/",
    "lint:fix": "pnpm lint -- --fix",
    "start": "node dist/server.js",
    "test:unit": "jest --testMatch **/__tests__/unit/**/*.spec.ts",
    "test:unit:coverage": "pnpm test:unit -- --coverage",
    "test:unit:watch": "pnpm test:unit -- --watch",
    "test:integration": "jest ./__tests__/integration/index.test.ts --runInBand",
    "test:integration:coverage": "pnpm test:integration -- --coverage",
    "test:integration:watch": "pnpm test:integration -- --watch"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.1.1",
    "@popperjs/core": "^2.11.5",
    "bootstrap": "^5.1.3",
    "dotenv": "^16.0.1",
    "dotenv-expand": "^8.0.3",
    "express": "^4.18.1",
    "fs-extra": "^10.1.0",
    "helmet": "^5.1.0",
    "morgan": "^1.10.0",
    "nunjucks": "^3.2.3",
    "sitemap": "^7.1.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/morgan": "^1.9.3",
    "@types/supertest": "^2.0.12",
    "@types/webpack-env": "1.17.0",
    "fork-ts-checker-webpack-plugin": "^7.2.11",
    "laravel-mix": "^6.0.49",
    "nodemon": "^2.0.16",
    "nodemon-webpack-plugin": "^4.7.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.14",
    "resolve-url-loader": "^5.0.0",
    "rimraf": "^3.0.2",
    "sass": "~1.32.13",
    "sass-loader": "~10.2.1",
    "supertest": "^6.2.3",
    "ts-loader": "^9.3.0",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "typescript": "^4.7.3",
    "webpack": "^5.73.0",
    "webpack-node-externals": "^3.0.0",
    "webpackbar": "^5.0.2"
  },
  "bundledDependencies": [
    "@intake24/common",
    "@intake24/i18n",
    "@intake24/services"
  ]
}
