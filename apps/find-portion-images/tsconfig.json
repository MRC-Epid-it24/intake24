{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@common/*": ["../../packages/common/src/*"],
      "@api/*": ["../api/src/*"],
      "@intake24/*": ["../../packages/*/src"]
    },
    "types": [
      "node",
      "webpack-env"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts",
    ".vscode"
  ]
}
