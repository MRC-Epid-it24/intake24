{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@api/*": ["src/*"],
      "@tests/*": ["tests/*"],
      "@common/*": ["../../packages/common/src/*"]
    },
    "types": [
      "node",
      "jest",
      "jest-extended",
      "webpack-env"
    ]
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
