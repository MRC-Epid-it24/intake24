{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@api/*": ["src/*"],
      "@tests/*": ["tests/*"],
      "@common/*": ["../../packages/common/src/*"],
      "@intake24/*": ["../../packages/*/src"]
    }
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
