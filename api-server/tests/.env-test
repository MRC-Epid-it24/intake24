# Node environment
NODE_ENV=test

# Application settings
APP_NAME=Intake24
APP_HOST=localhost
APP_PORT=3100

# Security settings

# CORS settings
# comma-delimited origins
CORS_ORIGIN=

# JSON Web Token settings
JWT_ACCESS_SECRET=aJWTAccessSecret
JWT_ACCESS_LIFETIME=15m
JWT_REFRESH_SECRET=aJWTRefreshSecret
JWT_REFRESH_LIFETIME=1d
JWT_COOKIE_PATH=/v3/refresh
JWT_COOKIE_SAMESITE=
