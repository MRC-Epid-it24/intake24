{
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "eslint.validate": ["vue", "vue-html", "html", "javascript", "javascriptreact", "typescript"],
  "eslint.workingDirectories": [
    { "directory": "apps/api" },
    { "directory": "apps/portal" },
    { "directory": "packages/common" },
    { "directory": "packages/common-backend" },
    { "directory": "packages/db" },
    { "directory": "packages/i18n" },
    { "directory": "packages/services" },
    { "directory": "packages/ui" }
  ],
  "files.eol": "\n",
  "search.exclude": {
    "coverage": true,
    "dist": true,
    "node_modules": true,
    "tmp": true
  },
  "typescript.inlayHints.enumMemberValues.enabled": true,
  "files.watcherExclude": {
    "**/target": true
  },
  "colorTabs.config": [
    {
      "regex": "apps/survey/*",
      "color": "#851e3e",
      "label": "Survey"
    },
    {
      "regex": "apps/api/.*",
      "color": "#f9caa7",
      "label": "Api"
    },
    {
      "regex": ".*/admin/.*",
      "color": "#89CFF0",
      "label": "Admin"
    },
  ],
  "colorTabs.titleBackground": true,
  "colorTabs.ignoreCase": true,
  "workbench.colorCustomizations": {
    "tab.activeBorder": "#89CFF0",
    "titleBar.activeBackground": "#89CFF0",
    "titleBar.activeForeground": "#000000",
    "statusBar.background": "#89CFF0",
    "statusBar.foreground": "#000000"
  }
}
