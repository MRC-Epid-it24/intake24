{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@common/*": ["packages/common/src/*"],
      "@api/*": ["apps/api/src/*"],
      "@admin/*": ["apps/admin/src/*"],
      "@cli/*": ["apps/cli/src/*"],
      "@survey/*": ["apps/survey/src/*"],
      "@intake24/*": ["packages/*/src"]
    },
    "types": [
      "node",
      "jest",
      "jest-extended",
      "webpack-env"
    ]
  }
}
